<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="js" template="Elogic_Lessons::js-template.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="component-a" xsi:type="array">
                                <item name="component" xsi:type="string">
                                    Elogic_Lessons/js/ui-component-a
                                </item>
                                <item name="config" xsi:type="array">
                                    <item name="label" xsi:type="string">
                                        Component A
                                    </item>
                                </item>
                                <item name="children" xsi:type="array">
                                    <item name="component-b" xsi:type="array">
                                        <item name="component" xsi:type="string">
                                            Elogic_Lessons/js/ui-component-b
                                        </item>
                                        <item name="title" xsi:type="string">
                                            Component B
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>